<h1><%=  @track.name %></h1>

<section>
  <%= @track.lyrics %>
</section>

<section>
  <h2>New Note</h2>
  <%= render "note/form", track: @track %>
</section>

<section>
  <h2>Notes</h2>
  <%= render @notes %>
</section>

<br>
<nav>
  <header><b>Links</b></header>

  <ul>
    <li><%= link_to "Edit Track", edit_track_url(@track), method: :get %></li>
    <li><%= link_to "Delete Track", track_url(@track), method: :delete %></li>
    <li><%= link_to "Back to #{@album.name}", album_url(@album) %></li>
  </ul>
</nav>
